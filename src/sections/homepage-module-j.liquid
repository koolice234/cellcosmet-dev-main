{% schema %}
    {
        "name": "Homepage Module J",
        "max_blocks": 3,
        "settings": [
            {
                "type": "text",
                "id": "headline",
                "label": "Headline Text"
            },
            {
                "type": "text",
                "id": "copy",
                "label": "Copy Text"
            },
            {
                "type": "text",
                "id": "cta",
                "label": "CTA Text"
            },
            {
                "type": "url",
                "id": "link",
                "label": "CTA Link"
            }
        ],
        "blocks": [
            {
                "type": "icon",
                "name": "Icon",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image_a",
                        "label": "Icon"
                    },
                    {
                        "type": "text",
                        "id": "headline",
                        "label": "Title"
                    },
                    {
                        "type": "text",
                        "id": "copy",
                        "label": "Copy Text"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Homepage Module J",
                "category": "Homepage",
                "settings": {
    
                }
            }
        ]
    }
    {% endschema %}
    
<section class="hpmodule hp-module-j">

    <div class="flex-row">

        <div class="column first">
            <div>
            {% if section.settings.headline != blank %}
                <h2 class="headline title-font-4-light">{{ section.settings.headline }}</h2>
            {% endif %}
            {% if section.settings.copy != blank %}
                <p class="copy body-font-1">{{ section.settings.copy }}</p>
            {% endif %}
            {% if section.settings.cta != blank %}
                <div class="cta-wrap">
                    <a href="{{ section.settings.link }}" class="cta-2"><span>{{ section.settings.cta }}</span></a>
                </div>
            {% endif %}
            </div>
        </div>

        <div class="column second">
            <div class="block-container">
                <div class="inner-wrapper">

                    {% if section.blocks.size > 0 %}
                        <div class="icons-wrapper">
                            {% for block in section.blocks %}
                                {% if block.settings.image_a != blank %}
                                    <div class="icon-block">
                                        {%- include 'responsive-image-lazy',
                                            image: block.settings.image_a,
                                            imageSmall: block.settings.image_a,
                                            alt: block.settings.image_a.alt,
                                            size: '768x',
                                            sizeMedium: '768x',
                                            sizeSmall: '768x',
                                            heightFix: false,
                                        -%}
                                        {% if block.settings.headline != blank %}
                                            <h3 class="headline-icon body-font-4">{{ block.settings.headline }}</h3>
                                        {% endif %}
                                        {% if block.settings.copy != blank %}
                                            <p class="body-font-3">{{ block.settings.copy }}</p>
                                        {% endif %}
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</section>

    