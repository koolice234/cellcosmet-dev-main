{% schema %}
{
    
    "name": "About Module A",
    "settings": [
        {
            "type": "image_picker",
            "id": "image_desktop",
            "label": "Desktop Header Image"
        },
        {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Mobile Header Image"
        },
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "radio",
            "options": [
                { "value": "style-light", "label": "Light" },
                { "value": "style-dark", "label": "Dark" }
            ],
            "default": "style-dark",
            "id": "text_color",
            "label": "Font Color"
        },
        {
            "type": "radio",
            "options": [
                { "value": "text-left", "label": "Left" },
                { "value": "text-center", "label": "Center" },
                { "value": "text-right", "label": "Right" }
            ],
            "default": "text-center",
            "id": "text_align",
            "label": "Text Alignment"
        }
    ],
    "presets": [
        {
            "name": "About Module A",
            "settings": {}
        }
    ]

}
{% endschema %}

<div class="about-module about-module-a">  
    <div class="banner-image">
        <picture>
            <source srcset="{{section.settings.image_mobile | img_url: '1024x' }}" media="(max-width: 767px)">
            <source srcset="{{section.settings.image_desktop | img_url: '1500x' }}">
            <img srcset="{{section.settings.image_desktop | img_url: '1500x' }}" alt="{{section.settings.heading}}">
        </picture>
    </div>
    <h1 class="banner-headline {{section.settings.text_align}} {{ section.settings.text_color }}">{{section.settings.heading}}</h1>
</div>