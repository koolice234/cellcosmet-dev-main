{% capture checkoutDiscounts %}
    {%- for discount in checkout.cart_level_discount_applications -%}
        {%- if forloop.last -%}
            {{- discount.title | strip -}}
        {%- else -%}
            {{- discount.title | strip | append: ", " -}}
        {%- endif -%}
    {%- endfor -%}
{% endcapture %}

{%- if checkoutDiscounts != blank -%}
    <script type="application/json" data-ga-checkout-coupons>
        {{- checkoutDiscounts | strip -}}
    </script>
{%- endif -%}