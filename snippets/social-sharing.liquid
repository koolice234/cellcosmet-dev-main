<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing">
	{% if settings.share_facebook %}
	<a class="share-fb" target="_blank" href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}">
		<span class="visually-hidden">{{ 'general.social.share_on_facebook' | t }}</span>
	</a>
	{% endif %}

	{% if settings.share_twitter %}
	<a class="share-tw" target="_blank" href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}">
  		<span class="visually-hidden">{{ 'general.social.share_on_twitter' | t }}</span>
	</a>
	{% endif %}

	{% if settings.share_pinterest %}
	<a class="share-pin" target="_blank" href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}">
  		<span class="visually-hidden">{{ 'general.social.share_on_pinterest' | t }}</span>
	</a>
	{% endif %}
	
	{% if settings.share_email %}
	<a class="icon icon-mail share-mail" href="mailto:?subject=Check this out on {{ shop.name }}&body=Have a look at this item from {{ shop.name }}: {{ share_permalink }}">
    	<span class="visually-hidden">{{ 'general.social.share_by_email' | t }}</span>
    </a>
	{% endif %}
</div>
