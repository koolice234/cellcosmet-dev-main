{% schema %}
{
    "name": "Homepage Module F",
    "max_blocks": 6,
    "settings": [
        {
            "type": "text",
            "id": "headline",
            "label": "Headline",
            "default": "SHOP BY CONCERN"
        }
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image_a",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "headline",
                    "label": "Title"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Homepage Module F",
            "category": "Homepage",
            "settings": {

            }
        }
    ]
}
{% endschema %}

<section class="hpmodule hp-module-f">

    <div class="inner-wrapper">
        {% if section.settings.headline != blank %}
            <h3 class="headline title-font-4-light">{{ section.settings.headline }}</h3>
        {% endif %}
        {% if section.blocks.size > 0 %}
            <div class="blocks-wrapper">
                {% for block in section.blocks %}
                    <a class="block" href="{{ block.settings.link }}">
                    {% if block.settings.image_a != blank %}
                        {%- include 'responsive-image',
                            image: block.settings.image_a,
                            imageSmall: block.settings.image_a,
                            alt: block.settings.image_a.alt,
                            size: '700x',
                            sizeMedium: '700x',
                            sizeSmall: '768x',
                            heightFix: false,
                        -%}
                    {% endif %}
                    {% if block.settings.headline != blank %}
                        <p class="body-font-5">{{ block.settings.headline }}</p>
                    {% endif %}
                    </a>
                {% endfor %}
            </div>
        {% endif %}
    </div>

</section>
