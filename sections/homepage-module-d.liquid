{% schema %}
{
    "name": "Homepage Module D",
    "settings": [
        {
            "type": "text",
            "id": "headline",
            "label": "Headline Text",
            "default": "Featured in"
        }
    ],
    "blocks": [
        {
            "type": "logo",
            "name": "Logo",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image_a",
                    "label": "Logo Image"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Logo Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Homepage Module D",
            "category": "Homepage",
            "settings": {

            }
        }
    ]
}
{% endschema %}

    <section class="hpmodule hp-module-d">

    <div class="inner-wrapper">
        {% if section.settings.headline != blank %}
            <h4 class="headline body-font-4">{{ section.settings.headline }}</h4>
        {% endif %}
        {% if section.blocks.size > 0 %}
            <div class="logos-wrapper">
                <div class="logos-slider">
                {% for block in section.blocks %}
                    {% if block.settings.image_a != blank %}
                        <div class="logo">
                            {% if block.settings.link != blank %}
                            <a href="{{ block.settings.link }}">
                            {% endif %}
                            {%- include 'responsive-image-lazy',
                                image: block.settings.image_a,
                                imageSmall: block.settings.image_a,
                                alt: block.settings.image_a.alt,
                                size: '300x',
                                sizeMedium: '300x',
                                sizeSmall: '300x',
                                heightFix: false
                            -%}
                            {% if block.settings.link != blank %}
                            </a>
                            {% endif %}
                        </div>
                    {% endif %}
                {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>

    </section>