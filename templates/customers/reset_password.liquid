<div class="account-wrapper">
    <div class="account account-reset-password">
        <div class="account-body" >
            <div id="ResetPasswordForm">
                <h1>{{ 'customer.reset_password.title' | t }}</h1>
                <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>
                {% form 'reset_customer_password' %}
                    <div class="hide" aria-hidden="true">
                        <input type="text" id="HiddenUserName" name="username" tabindex="-1" value="" autocomplete="username" disabled="disabled" >
                    </div>
                    <div class="fieldset">
                        <div class="field">
                            <div class="input-wrapper {% if form.errors contains 'password' %}input-error{% endif %}">
                                <input type="password"
                                    name="customer[password]"
                                    id="ResetPassword"
                                    class="required {% if form.errors contains 'password' %}input-error{% endif %}"
                                    placeholder="{{ 'customer.reset_password.password' | t }}" 
                                    autocomplete="new-password" >
                                <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
                            </div>
                        </div>
                    </div>
                    <div class="fieldset">
                        <div class="field">
                            <div class="input-wrapper {% if form.errors contains 'password_confirmation' %}input-error{% endif %}">
                                <input type="password"
                                    name="customer[password_confirmation]"
                                    id="PasswordConfirmation"
                                    class="required {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
                                    placeholder="{{ 'customer.reset_password.password_confirm' | t }}" 
                                    autocomplete="new-password" >
                                <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
                            </div>
                        </div>
                    </div>
                    
                    {{ form.errors | default_errors }}
                    
                    <div class="actions">
                        <button type="submit" class="btn">{{ 'customer.reset_password.submit' | t }}</button>
                    </div>
                {% endform %}
            </div>
        </div>
    </div>
</div>