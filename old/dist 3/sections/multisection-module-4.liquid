{% schema %}
{
    "name": "Multisection Module 4",
    "blocks": [
        {
            "type": "block",
            "name": "Block",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "headline",
                    "label": "Headline Text"
                },
                {
                    "type": "richtext",
                    "id": "description",
                    "label": "Body Text"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "Link"
                }
            ]
        }
    ],
    "settings": [
        {
            "type": "text",
            "id": "headline",
            "label": "Headline Text"
        },
        {
            "type": "richtext",
            "id": "description",
            "label": "Body Text"
        },
        {
            "type": "radio",
            "options": [
                { "value": "text-left", "label": "Left" },
                { "value": "text-center", "label": "Center" },
                { "value": "text-right", "label": "Right" }
            ],
            "default": "text-center",
            "id": "text_align",
            "label": "Text Alignment"
        }
    ],
    "presets": [
        {
            "name": "Multisection Module 4",
            "category": "Additional Content",
            "settings": {

            }
        }
    ]
}
{% endschema %}


    <section class="multisection-module multisection-module-4">

        <div class="header-content {{section.settings.text_align}}">
            {% if section.settings.headline != blank %}
                <h2 class="headline title-font-4-light">{{ section.settings.headline }}</h2>
            {% endif %}
            {% if section.settings.description != blank %}
                <div class="description body-font-1">{{ section.settings.description }}</div>
            {% endif %}   
        </div>

        {% if section.blocks.size > 0 %}
        <div class="block-container {% if section.blocks.size < 4 %}three-block{% endif %}{% if section.blocks.size == 4 %}four-block{% endif %}{% if section.blocks.size > 4 %} five-block{% endif %}">
        {% for block in section.blocks %}
            <div class="block">
                <div class="image-slide">
                {%- include 'responsive-image-lazy',
                    image: block.settings.image,
                    imageSmall: block.settings.image,
                    alt: block.settings.image.alt,
                    size: '600x',
                    sizeMedium: '600x',
                    sizeSmall: '600x',
                    heightFix: false
                -%}
                </div>
                <div class="content">
                    {% if block.settings.link != blank %}
                    <a href="{{ block.settings.link }}">
                    {% endif %}
                        {% if block.settings.headline != blank %}
                            <h4 class="headline title-font-5">{{ block.settings.headline }}</h4>
                        {% endif %}
                        {% if block.settings.description != blank %}
                            <div class="description body-font-1">{{ block.settings.description }}</div>
                        {% endif %}
                    {% if block.settings.link != blank %}
                    </a>
                    {% endif %}
                </div>
            </div>  
        {% endfor %}
        </div>
        {% endif %}


    </section>
